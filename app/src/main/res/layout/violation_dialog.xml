<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="17dp">

  <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">

   <LinearLayout android:orientation="vertical"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:boxBackgroundColor="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_line"
        android:layout_marginBottom="17dp"
        android:id="@+id/input_layout_violation_lines"
        android:background="#FFFFFF">

        <AutoCompleteTextView
            android:id="@+id/violation_lines_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:boxBackgroundColor="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_prefix"
        android:layout_marginBottom="17dp"
        android:id="@+id/input_layout_violation_prefixes"
        android:background="#FFFFFF">

        <AutoCompleteTextView
            android:id="@+id/violation_prefixes_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:boxBackgroundColor="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_employee_type"
        android:layout_marginBottom="17dp"
        android:id="@+id/input_layout_violation_employee_type"
        android:background="#FFFFFF">

        <AutoCompleteTextView
            android:id="@+id/input_layout_violation_employee_type_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:boxBackgroundColor="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_work_time"
        android:layout_marginBottom="17dp"
        android:id="@+id/input_layout_violation_work_time"
        android:background="#FFFFFF">

        <AutoCompleteTextView
            android:id="@+id/input_layout_violation_work_time_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:boxBackgroundColor="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_state"
        android:layout_marginBottom="17dp"
        android:id="@+id/input_layout_violation_state"
        android:background="#FFFFFF">

        <AutoCompleteTextView
            android:id="@+id/input_layout_violation_state_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:boxBackgroundColor="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_violation_type"
        android:layout_marginBottom="17dp"
        android:id="@+id/input_layout_violation_type"
        android:background="#FFFFFF">

        <AutoCompleteTextView
            android:id="@+id/input_layout_violation_type_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:boxBackgroundColor="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_department"
        android:layout_marginBottom="17dp"
        android:id="@+id/input_layout_violation_department"
        android:background="#FFFFFF">

        <AutoCompleteTextView
            android:id="@+id/input_layout_violation_department_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/permanence_button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_save"
        android:textAllCaps="false"
        android:layout_marginBottom="77px"
        android:textAlignment="center"/>

   </LinearLayout>

  </ScrollView>

</LinearLayout>